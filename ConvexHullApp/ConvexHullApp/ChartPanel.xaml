<UserControl x:Class="ConvexHullApp.ChartPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
             xmlns:local="clr-namespace:ConvexHullApp"
             mc:Ignorable="d"
             Focusable="True"
             Loaded="UserControlLoaded"
             d:DesignHeight="450" d:DesignWidth="800"> 
    <Grid>
        <ScottPlot:WpfPlot Name="PointChart" MouseDown="ChartMouseClicked" KeyDown="OnKeyDown" KeyUp="OnKeyDown" MouseMove="OnMouseMoved"/>
    </Grid>
</UserControl>
